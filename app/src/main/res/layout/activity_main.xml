<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:configChanges="orientation|screenSize"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.android.helloandroid.MainActivity">

        <ImageView
            android:id="@+id/Udacity_logo"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/udacity_round" />

        <TextView
            android:id="@+id/Learn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Udacity_logo"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/alegreya_sans_bold_italic"
            android:text="Learn. Think. Do."
            android:textColor="#1E90FF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/Udacity_courses"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_below="@id/Learn"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/udacity_courses" />

        <TextView
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Udacity_courses"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:autoLink="web"
            android:fontFamily="@font/alegreya_sans_bold_italic"
            android:text="@string/website"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/website"
            android:layout_centerHorizontal="true"
            android:autoLink="phone"
            android:fontFamily="@font/alegreya_sans_bold_italic"
            android:text="@string/Phone_number"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Street_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Phone_number"
            android:layout_centerHorizontal="true"
            android:autoLink="map"
            android:fontFamily="@font/alegreya_sans_medium_italic"
            android:text="@string/Street_address"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

    </RelativeLayout>
</ScrollView>
